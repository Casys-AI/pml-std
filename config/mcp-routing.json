{
  "$schema": "./mcp-routing.schema.json",
  "routing": {
    "client": [
      "filesystem:*",
      "git:*",
      "shell:*",
      "process:*",
      "docker:*",
      "kubernetes:*",
      "ssh:*",
      "database:*",
      "sqlite:*",
      "postgres:*"
    ],
    "server": [
      "memory:*",
      "tavily:*",
      "brave_search:*",
      "exa:*",
      "github:*",
      "slack:*",
      "api:*",
      "http:*",
      "fetch:*",
      "sequential-thinking:*",
      "context7:*",
      "magic:*",
      "json:*",
      "math:*",
      "datetime:*",
      "crypto:*",
      "collections:*",
      "validation:*",
      "format:*",
      "transform:*",
      "algo:*",
      "string:*",
      "color:*",
      "geo:*",
      "resilience:*",
      "schema:*",
      "diff:*",
      "state:*",
      "plots:*",
      "pml:*"
    ]
  },
  "default": "client",
  "_comments": {
    "client": "Runs on user's machine - filesystem, process, network access",
    "server": "Runs on pml.casys.ai - stateless computation, external APIs",
    "default": "Unknown tools route to client (safe fallback)"
  }
}
